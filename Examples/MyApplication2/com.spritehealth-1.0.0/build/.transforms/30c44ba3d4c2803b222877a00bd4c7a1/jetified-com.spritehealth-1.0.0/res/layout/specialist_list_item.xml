<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_view_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="2dp">
        <ImageView
            android:id="@+id/imgvUser"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/specialist_default" />

        </androidx.cardview.widget.CardView>>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_card"
            android:text="name"
            style="@style/wpBody1"
             />

        <TextView
            android:id="@+id/tvSpeciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/image_view_card"
            android:text="speciality"
            style="@style/wpBody2" />

        <TextView
            android:id="@+id/tvFirstSlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSpeciality"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/image_view_card"
            android:background="@drawable/round_corner"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="No Availability"
            style="@style/wpBody3" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>