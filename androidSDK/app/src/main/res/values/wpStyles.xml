<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--         Customized application theme. -->

    <style name="wpCommonStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="wpEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/wpBody2</item>
        <item name="android:background">@drawable/wp_edittext</item>
    </style>


    <style name="wpEditTextTransparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/wpBody2</item>
        <item name="android:background">@drawable/wp_edittext_transparent</item>
    </style>

    <style name="wpSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/wp_spinner_bg</item>
    </style>


    <style name="wpTransparentSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/wp_spinner_transparent_bg</item>
    </style>

    <style name="wpButton" parent="wpCommonStyle">
        <item name="android:background">@drawable/border_top_touch</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wpStickyButton" parent="wpButton">
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="wpTypeface" >
        <item name="android:typeface">sans</item>
    </style>

    <style name="wpHeading" parent="wpTypeface">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>
    <style name="wpSectionHeading" parent="wpTypeface">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        
        <item name="android:alpha">0.87</item>
    </style>

    <style name="wpBody1" parent="wpTypeface">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wpBody2" parent="wpTypeface">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="wpBody3" parent="wpTypeface">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="wpNumberLevel1" parent="wpTypeface">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="wpNumberLevel2" parent="wpTypeface">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="wpNumberLevel3" parent="wpTypeface">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="wpHint1" parent="wpTypeface">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hintGray</item>
    </style>


    <style name="wpHint2" parent="wpTypeface">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hintGray</item>
        
    </style>

    <style name="wpHyperlink" parent="wpTypeface">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
        
        <item name="android:alpha">0.87</item>
    </style>

    <style name="wpErrorBody" parent="wpTypeface">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red</item>
        
        <item name="android:alpha">0.70</item>
    </style>

    <style name="wpPageHeading"  parent="wpHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxWidth">250sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:text">Page Heading</item>
        <item name="android:ellipsize">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="wpBackground">
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="wpBlockRounded" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/wp_box_shadow</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>


</resources>